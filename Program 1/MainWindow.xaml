<Window x:Class="Program_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Program_1"
       
  mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:Person/>
    </Window.DataContext>
    <Grid>
        <Canvas HorizontalAlignment="Left" Height="234" Margin="146,70,0,0" VerticalAlignment="Top" Width="476">
            <TextBox HorizontalAlignment="Left" Text="{Binding Path=FirstName,Mode=TwoWay}" Height="24" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Canvas.Left="93" Canvas.Top="10"/>
            <TextBox HorizontalAlignment="Left" Text="{Binding Path=LastName,Mode=TwoWay}" Height="22" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Canvas.Left="93" Canvas.Top="78"/>
            <TextBox HorizontalAlignment="Left" Text="{Binding Path=FullName,Mode=TwoWay}" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Canvas.Left="93" Canvas.Top="145"/>
        </Canvas>
    </Grid>
</Window>
